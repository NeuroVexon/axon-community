# Axon by NeuroVexon - Environment Configuration
# Copy this file to .env and adjust as needed

# ============================================
# App Settings
# ============================================
APP_NAME="Axon by NeuroVexon"
APP_VERSION="2.0.0"
DEBUG=false

# ============================================
# Server
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./axon.db

# ============================================
# Security
# Generate with: openssl rand -hex 32
# ============================================
SECRET_KEY=change-me-in-production-use-openssl-rand-hex-32

# ============================================
# LLM Provider
# Options: ollama, claude, openai, gemini, groq, openrouter
# ============================================
LLM_PROVIDER=ollama

# ============================================
# Ollama (Local LLM)
# ============================================
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b

# ============================================
# Claude API (Anthropic)
# ============================================
ANTHROPIC_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-20250514

# ============================================
# OpenAI API
# ============================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# ============================================
# Google Gemini API
# ============================================
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.0-flash

# ============================================
# Groq API (OpenAI-compatible, schnell)
# ============================================
GROQ_API_KEY=
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================
# OpenRouter API (Zugang zu vielen Modellen)
# ============================================
OPENROUTER_API_KEY=
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# ============================================
# Tool Execution
# ============================================
OUTPUTS_DIR=./outputs
MAX_FILE_SIZE_MB=10

# ============================================
# Code-Sandbox (Docker)
# ============================================
SANDBOX_ENABLED=false
CODE_EXECUTION_TIMEOUT=30
CODE_EXECUTION_MEMORY_MB=256

# ============================================
# E-Mail Integration (IMAP/SMTP)
# ============================================
EMAIL_ENABLED=false
IMAP_HOST=
IMAP_PORT=993
IMAP_USER=
IMAP_PASSWORD=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# ============================================
# MCP-Server (Model Context Protocol)
# ============================================
MCP_ENABLED=false
MCP_AUTH_TOKEN=

# ============================================
# Telegram Bot (optional)
# ============================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_ALLOWED_USERS=  # Komma-getrennte User-IDs, leer = alle

# ============================================
# Discord Bot (optional)
# ============================================
DISCORD_ENABLED=false
DISCORD_BOT_TOKEN=
DISCORD_ALLOWED_CHANNELS=  # Komma-getrennte Channel-IDs
DISCORD_ALLOWED_USERS=     # Komma-getrennte User-IDs
